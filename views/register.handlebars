<div class="text-center container-fluid">
    <form class="form-signin" action="/register" method="POST">
        <h1 class="h3 mb-3 font-weight-normal">Please create an account</h1>
        <label for="inputUser" class="sr-only">Username</label>
        <input type="text" id="inputUser" name="username" class="form-control" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        <p><a href="/login">Go to sign in</a></p>
        <p class="mt-5 mb-3 text-muted">&copy; Ashish Bachavala 2020</p>
    </form>
</div>